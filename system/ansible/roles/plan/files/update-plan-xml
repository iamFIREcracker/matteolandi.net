exec >>/data/plan/logs/update-plan-xml 2>&1
date

update() {
    input=$1
    output=$2
    title=$3
    link=$4
    self=$5

    /data/plan/plan-rss \
          --title "$title" \
          --link "$link" \
          --atom-link-self "$self" \
    < "$input" > "$output"

    head -30 "$output"
}

update \
    /data/plan/.plan \
    /data/plan/plan.xml \
    "Matteo Landi's log" \
    "https://matteolandi.net/.plan" \
    "https://matteolandi.net/plan.xml"
